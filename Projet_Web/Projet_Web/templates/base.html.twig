<!DOCTYPE html>
<html>
     <head>
        <meta charset="UTF-8 name="viewport" content="width=device-width, initial-scale=1"" >
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>

    
    <body>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#2831de;">
            <div class="collapse navbar-collapse" id="navbarText">
                {% if app.user %}
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href={{path('accueil')}} > Accueil </a>
                    </li>
                     <li class="nav-item">
                    <a class="nav-link" href={{path('serie_index')}} >Series</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{path('about')}}>A Propos</a>
                    </li>
                    <li>
                        <a class="nav-link" href={{path('app_logout')}}>Déconnexion</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    <a class="navbar-brand" style="float:right" href={{path('serie_index')}}>[{{app.user.name}}] </a>
                </span>
                {% else %}
                <span class="navbar-text"  style="float:right">
                   <a class="nav-link" href={{path('app_login')}}>Connexion</a>
                </span>
                <span class="navbar-text" style="float:right">
                    <a class="nav-link" href={{path('app_register')}}>Inscription</a>
                </span>
                <span class="navbar-text" style="float:right">
                    <a class="nav-link" href={{path('serie_index')}} >Series</a>
                </span>
                <span class="navbar-text" style="float:right">
                    <a class="nav-link" href={{path('about')}}>A Propos</a>
                </span>
                {% endif %}

                {% if app.user %}
                {% if app.user.admin %}
                <span>
                    <a style="float:left;"href="{{ path('serie_new') }}">creation serie</a>
                </span>
                <span class="navbar-text">
                    <a class="navbar-brand" style="float:right">[Compte Administrateur] </a>
                </span>
                <span class="navbar-text">
                    <a class="navbar-brand" style="float:right" href={{path('serie_index')}}>[{{app.user.name}}] </a>
                </span>
                {% endif %}
                {% endif %}   
                
            </div>
        </nav>

        {% block body %}{% endblock %}
    </body>
</html>
