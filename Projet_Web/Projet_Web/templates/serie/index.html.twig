{% extends 'base.html.twig' %}

{% block title %}Series index{% endblock %}

{% block body %}
    <h1 style="margin-left:25px">Series index</h1>

    <style>

        div.polaroid {
             width: 22%;
             height: 700px;
             margin : 25px;
             background-color: white;
             box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
             margin-bottom: 25px;
             float : left;
        }

        div.container {
            text-align: center;
            padding: 10px 20px;
            color : black; 
        }
    </style>

    <form action : {{ path('serie_index')}} method="get" class="form-example">
        <div class="form-search">
            <label for="name">Enter series: </label>
            <input type="text" name="search" id= "searchbar" required>
        </div>
        <div class="form-example">
            <input type="submit" value="recherche">
        </div>
</form>

     

{% for series in series %}
<a href="{{ path('serie_show', {'id': series.id}) }}">
     <div class="polaroid">
            <img src={{ path('series_poster', {'id': series.id}) }} style="width:100%; height:90%;">
            <div class="container">
                <p> {{series.title }} </p>
            </div>
        </div>
</a>
{% else %}
    <div class="container">
         <p> no records found </p>
    </div>

{% endfor %}


    <a href="{{ path('serie_new') }}">Create new</a>

    <nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
  </ul>
</nav>

{% endblock %}
